<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 인터넷, 위치 권한 설정 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/cloudgreen_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cloudgreen_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Clouddrawing"
        tools:targetApi="31">
        <activity
            android:name=".MyInformationActivity"
            android:exported="false" />
        <activity
            android:name=".CloudContentActivity"
            android:exported="false" />
        <activity
            android:name=".CloudListActivity"
            android:exported="false" />
        <activity
            android:name=".SignupActivity"
            android:exported="false" />

        <activity
            android:name=".CloudDrawingActivity"
            android:exported="false"/>


        <!-- Main Activity (without LAUNCHER category now) -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Loading Activity (This is the new splash screen) -->
        <activity
            android:name=".LoadingActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"> <!-- Optional: Use a theme without ActionBar for splash -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <meta-data
            android:name="com.kakao.vectormap.APP_KEY"
            android:value="cd83bfe1b110bf47b190ade8001e195b" />
    </application>

</manifest>